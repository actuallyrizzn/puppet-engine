# Application
APP_NAME="Puppet Engine"
LOG_LEVEL=INFO
DEBUG=false

# API / CORS
# Comma-separated list of allowed origins, leave empty to disable CORS
CORS_ALLOW_ORIGINS=

# Twitter/X API (optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Solana (optional)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=

# Storage
SQLITE_DB_PATH=puppet_engine.db

# Observability / Tracing
ENABLE_TRACING=false
ENABLE_CONSOLE_TRACING=false
OTLP_ENDPOINT=
